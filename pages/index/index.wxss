/*******************活动主题****************/
.active-theme{
    width:710rpx;
    margin: 10rpx auto 20rpx;
    height: 235rpx;
    position: relative;
}
.active-theme image{
    width: 100%;
    height: 100%;
    z-index: 1;
}
.active-theme view{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.4);
    font-size: 40rpx;
    text-align: center;
    line-height: 235rpx;
    z-index: 2;
    position: absolute;
    top:0;
    left: 0;
    color: #fff;
}